
<odoo>
    <data>

        <record model="ir.ui.view" id="xw_auth_server.auth_info_list">
            <field name="name">Auth Info List </field>
            <field name="model">xw_auth_server.auth_info</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="customer" />
                    <field name="machine_code" />
                    <field name="module_name" />
                    <field name="reg_code" />
                    <field name="user_count" />
                    <field name="expire_date" />
                    <field name="remark" />
                    <button name="gen_reg_code" 
                        string="Gen Code" 
                        type="object" 
                        class="btn-primary"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="xw_auth_server.auth_info_form">
            <field name="name">Auth Info Form</field>
            <field name="model">xw_auth_server.auth_info</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                    
                        <header>
                            <button name="gen_reg_code" 
                                string="Gen Code" 
                                type="object" 
                                class="btn-primary"/>
                            <!-- decode_reg_code -->
                            <button name="decode_reg_code" 
                                string="Decode Code" 
                                type="object" 
                                class="btn-primary"/>
                        </header>

                        <div class="form-group row">
                            <label for="customer" class="col-sm-2 col-form-label">customer</label>
                            <div class="col-sm-10">
                                <field name="customer" string="customer"/>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="machine_code" class="col-sm-2 col-form-label">machine_code</label>
                            <div class="col-sm-10">
                                <field name="machine_code" string="machine_code"/>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="user_count" class="col-sm-2 col-form-label">user_count</label>
                            <div class="col-sm-10">
                                <field name="user_count" string="user_count"/>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="module_name" class="col-sm-2 col-form-label">module_name</label>
                            <div class="col-sm-10">
                                <field name="module_name" string="module_name"/>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="expire_date" class="col-sm-2 col-form-label">expire_date</label>
                            <div class="col-sm-10">
                                <field name="expire_date" string="expire_date"/>
                            </div>
                        </div>
                        
                        <div class="form-group row">
                            <label for="reg_code" class="col-sm-2 col-form-label">reg_code</label>
                            <div class="col-sm-10">
                                <field name="reg_code" string="reg_code"/>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="remark" class="col-sm-2 col-form-label">remark</label>
                            <div class="col-sm-10">
                                <field name="remark" string="remark"/>
                            </div>
                        </div>
                        
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="xw_auth_server.auth_info_act_window">
            <field name="name">Auth Info</field>
            <field name="res_model">xw_auth_server.auth_info</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="Auth Info"
                  id="xw_auth_server.auth_info_menu"
                  parent="xw_auth_server.root_menu"
                  sequence="0"
                  action="xw_auth_server.auth_info_act_window" />
        
    </data>
</odoo>