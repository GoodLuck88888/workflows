
<odoo>
    <data>

        <record model="ir.ui.view" id="xw_auth_base.reg_wizard_list">
            <field name="name">reg wizard list </field>
            <field name="model">xw_auth_base.reg_wizard</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="machine_code" string="Machine Code"/>
                    <field name="reg_code" string="reg_code"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="xw_auth_base.reg_wizard_form">
            <field name="name">reg wizard form </field>
            <field name="model">xw_auth_base.reg_wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>

                        <field name="module_id" invisible="1" force_save="1"/>

                        <div class="form-group row">
                            <label for="machine_code" class="col-sm-2 col-form-label">machine_code</label>
                            <div class="col-sm-10">
                                <field name="machine_code" string="Machine Code"/>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="reg_code" class="col-sm-2 col-form-label">reg_code</label>
                            <div class="col-sm-10">
                                <field name="reg_code" string="reg_code"/>
                            </div>
                        </div>

                        <footer>
                            <button class="btn btn-primary" type="object" string="Regist" name="onRegist" />
                            <button class="btn" special="cancel" string="cancel" />
                        </footer>
        
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="xw_auth_base.reg_wizard_act_window">
            <field name="name">reg wizard</field>
            <field name="res_model">xw_auth_base.reg_wizard</field>
            <field name="view_mode">tree,form</field>
        </record>
        
    </data>
</odoo>